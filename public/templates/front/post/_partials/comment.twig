<div class="card mb-4 comment" id="comment_{{ comment.id }}">
    <div class="card-body">
        <p class="title mt-0">{{ comment.title }}</p>

        <p>{{ comment.body }}</p>

        <p class="comment_id">#{{ comment.id }}</p>

        <div class="d-flex justify-content-between">
            <div class="d-flex flex-row align-items-center">
                <p class="small mb-0">{{ getPostAuthorById(comment.idUser) }}</p>
            </div>
            <div class="d-flex flex-row align-items-center">
                <p class="small text-muted mb-0"><a href="#" class="comment_answer" data-comment-id="{{ comment.id }}">RÃ©pondre</a></p>
            </div>
        </div>
    </div>
</div>

{% for commentChild in comment.getChildren() %}
    {% if commentChild.valid %}
    <div class="card mb-4 comment child_comment" id="comment_{{ commentChild.id }}">
        <div class="card-body">
            <p class="title mt-0">{{ commentChild.title }}</p>

            <p>{{ commentChild.body }}</p>

            <p class="comment_id">#{{ commentChild.id }}</p>

            <div class="d-flex justify-content-between">
                <div class="d-flex flex-row align-items-center">
                    <p class="small mb-0">{{ getPostAuthorById(commentChild.idUser) }}</p>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endfor %}
