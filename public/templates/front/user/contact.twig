{% extends '/front/page.twig' %}

{% block page_content %}
    {% include '/front/_partials/header.twig' %}

    <main class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-8 col-lg-8 col-xl-8">
                    <h2>Contact</h2>
                    <div class="my-5">
                        <form id="login" method="post">
                            <div class="form-floating">
                                <input class="form-control" id="email" type="email" name="email" placeholder="Entrer votre email" required/>
                                <label for="email">Email</label>
                            </div>
                            <div class="form-floating">
                                <input class="form-control" id="subject" type="text" name="subject" placeholder="Sujet de votre message" required/>
                                <label for="email">Sujet</label>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control" id="message" name="message" placeholder="Votre message..." style="height: 12rem" required></textarea>
                                <label for="message">Message</label>
                            </div>
                            <br />
                            <button class="btn btn-primary text-uppercase disabled" id="submitButton" type="submit">Envoyer le message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
