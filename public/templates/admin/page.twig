<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <title>Administration - {{ blogName }}</title>
    <link rel="stylesheet" href="/public/assets/admin/css/app.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
<div class="wrapper">
    {% include "/admin/_partials/sidebar.twig" %}

    <div class="main">
        <main class="content">
            <div class="container-fluid p-0">
                <h1 class="h3 mb-3">{% block page_title %}{% endblock %}</h1>

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                {% block page_content %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>

                {% block page_extra %}{% endblock %}
            </div>
        </main>
    </div>
</div>

<script src="/public/assets/admin/js/app.js"></script>
<script src="/public/assets/admin/js/editor/editor.js"></script>
<script src="/public/assets/admin/js/editor/components/header.js"></script>
<script src="/public/assets/admin/js/editor/components/quote.js"></script>
<script src="/public/assets/admin/js/editor/components/embed.js"></script>
<script src="/public/assets/admin/js/editor/components/warning.js"></script>
{% block javascript %}{% endblock %}
</body>
</html>
