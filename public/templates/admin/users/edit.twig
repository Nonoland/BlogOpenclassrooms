{% extends '/admin/page.twig' %}

{% block page_title %}
    Utilisateurs - Modification de l'utilisateur
{% endblock %}

{% block page_content %}
    <form action="" method="post" class="row g-3 needs-validation">
        <div class="col-md-12">
            <label for="user_lastname" class="form-label">Nom</label>
            <input type="text" class="form-control" name="user_lastname" id="user_lastname" value="{{ user.lastname }}" required>
        </div>
        <div class="col-md-12">
            <label for="user_firstname" class="form-label">Prénom</label>
            <input type="text" class="form-control" name="user_firstname" id="user_firstname" value="{{ user.firstname }}" required>
        </div>
        <div class="col-md-12">
            <label for="user_email" class="form-label">Email</label>
            <input type="email" class="form-control" name="user_email" id="user_email" value="{{ user.email }}" required>
        </div>
        <div class="col-md-12">
            <label for="user_password" class="form-label">Changer le mot de passe</label>
            <input type="text" class="form-control" name="user_password" id="user_password">
        </div>
        <div class="col-md-12">
            <label for="user_roles">Rôles</label>
            <select name="user_roles[]" id="user_roles" class="form-control" multiple>
                {% for role in userRoles %}
                    <option value="{{ role }}" {% if role in user.roles %}selected{% endif %}>{{ role }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary" name="user_submit">Enregistrer</button>
    </form>
{% endblock %}
